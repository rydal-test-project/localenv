server {
  listen 80;

  server_name test-site.com;

  location / {
    proxy_pass http://frontend:3000;
    # Needed for sockets
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }

  location /api {
    proxy_pass http://172.18.0.1:8080;
    rewrite ^/api/(.*) /public/api/$1 break;
  }

  location /db {
    proxy_pass http://172.18.0.2;
    rewrite ^/db/(.*) /$1 break;
  }
}
